# Application
APP_NAME="Ertis Service"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# CORS (адреса фронтенда через запятую)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Security (JWT токены) - ОБЯЗАТЕЛЬНО НАСТРОИТЬ!
# SECRET_KEY - любая длинная случайная строка (можно сгенерировать: openssl rand -hex 32)
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (стандартная настройка для phpMyAdmin)
# Формат: mysql+aiomysql://username:password@host:port/database
DATABASE_URL=mysql+aiomysql://root:@localhost:3306/ertis_db

# OpenAI (для AI-анализа проблем) - ОБЯЗАТЕЛЬНО!
# Получить ключ: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Yandex Maps API (для автокомплита адресов) - ОПЦИОНАЛЬНО
# Получить ключ: https://developer.tech.yandex.ru/
# Если не заполнить - автокомплит адресов работать не будет, но остальное работает
YANDEX_MAPS_API_KEY=


# Logging
LOG_LEVEL=INFO
